<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grid_item_bg_pressed"
    tools:context="com.poocode.sanpacho.Activities.ActDesHotRes">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/displayImagen"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_event_note_black_48dp"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dip"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Descripcion"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/color_negro"
                android:layout_weight="1"
                android:layout_margin="5dip"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_negro"
            android:layout_margin="8dip"
            android:id="@+id/nombre" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dip"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DirecciÃ³n"
            android:textSize="15sp"
            android:textColor="@color/color_negro"
            android:textStyle="bold"
            android:layout_margin="5dip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_negro"
            android:layout_margin="8dip"
            android:id="@+id/direccion" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dip"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicios"
            android:textSize="15sp"
            android:textColor="@color/color_negro"
            android:textStyle="bold"
            android:layout_margin="5dip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_negro"
            android:layout_margin="8dip"
            android:id="@+id/servicios" />

    </LinearLayout>

</LinearLayout>

</ScrollView>

